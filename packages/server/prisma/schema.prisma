// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["cockroachdb"]
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  identityCardNumber String    @id
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  name               String
  birthYear          Int
  gender             Gender
  contactNumber      String
  satellite          Satellite
  cg                 String
  status             Status
  shirtSize          ShirtSize
  Team               Team?     @relation(fields: [teamId], references: [id])
  teamId             Int?
  LeadingTeam        Team?     @relation("Leader")
}

model Team {
  id               Int      @id
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  points           Int      @default(0)
  tgOneCompleted   Boolean  @default(false)
  tgTwoCompleted   Boolean  @default(false)
  tgThreeCompleted Boolean  @default(false)
  set              Int      @default(dbgenerated("floor(random() * 5 + 1)::int"))
  Leader           User     @relation("Leader", fields: [leaderId], references: [identityCardNumber])
  leaderId         String   @unique
  User             User[]
}

model Timer {
  id    Int      @id
  endAt DateTime
}

model Contact {
  contactNumber String   @id
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  name          String
  description   String
}

enum Gender {
  MALE
  FEMALE
}

enum Satellite {
  KUCHAI
  KEPONG
  PJ
  PUCHONG
  RAWANG
  SERDANG
  SEREMBAN
  SETAPAK
  SGLONG
  USJ
  KLANG
  KAJANG
}

enum Status {
  NEWFRIEND
  NEWBELIEVER
  ORDINARYMEMBER
  LEADER
  BOSSLEVEL
}

enum ShirtSize {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum Station {
  CHAOSARENA
  INFINITYCITY
  BLACKMARKET
  LOSTZONE
}
